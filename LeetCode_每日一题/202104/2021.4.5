class Solution {
public:
    int removeDuplicates(vector<int>& nums) {
           int n=nums.size();
           if(n==0) return 0;
           int i=0;
           int size=1;
           for(int j=1;j<n;j++)
           {
               if(nums[j]!=nums[i])
               {
                   size=1;
                   i++;
                   nums[i]=nums[j];
               }
               else
               {
                  size++;
                  if(size<=2)
                 {
                     i++;
                     nums[i]=nums[j];
                 }
                  
               }
           }
           return i+1;
    }
};

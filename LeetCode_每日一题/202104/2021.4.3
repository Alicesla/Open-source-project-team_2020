class Solution {
public:
    int longestCommonSubsequence(string text1, string text2) {
            int m=text1.size();
            int n=text2.size();
            int c[m+1][n+1];
            for(int i=0;i<=m;i++)
            {
                for(int j=0;j<=n;j++)
                {
                    if(i==0||j==0)
                    c[i][j]=0;
                    else if(text1[i-1]==text2[j-1])
                    c[i][j]=c[i-1][j-1]+1;
                    else
                    c[i][j]=max(c[i-1][j],c[i][j-1]);
                }
            }
            return c[m][n];
    }
};
